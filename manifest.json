{
    "name": "DiscordNotes",
    "version": "1.0",
    "description": "Take notes from your Chrome browser and store it in your private Discord Server",
    "permissions": ["contextMenus", "activeTab", "storage"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "ui.html"
      },
    "manifest_version": 2
}